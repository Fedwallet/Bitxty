<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="54dip"
    android:orientation="horizontal"
    android:background="@drawable/bottomback" >
    
    <LinearLayout 
        android:id="@+id/bottom_home_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/cd_back"
        >
        <ImageView 
            android:id="@+id/home_bottom_home_bn"
            android:layout_width="15dip"
            android:layout_height="29dip"
            android:layout_marginTop="4dip"
            android:layout_gravity="center"
            android:background="@drawable/schoolnews"
            />
        <TextView 
            android:id="@+id/home_bottom_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="10dip"
            android:textStyle="bold"
            android:paddingTop="2dip"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:text="校园新闻"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_style_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/cd_back"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/home_bottom_style_bn"
            android:layout_width="28dip"
            android:layout_height="29dip"
            android:layout_gravity="center"
            android:layout_marginTop="4dip"
            android:background="@drawable/pt" />

        <TextView
            android:id="@+id/home_bottom_style_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:paddingTop="2dip"
            android:text="学生平台"
            android:textColor="@android:color/white"
            android:textSize="10dip"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout 
        android:id="@+id/bottom_shopping_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/cd_back">
        <ImageView 
            android:id="@+id/home_bottom_shopping_bn"
            android:layout_width="28dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_marginTop="4dip"
            android:background="@drawable/schoollife"/>
        <TextView 
            android:id="@+id/home_bottom_shopping_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="2dip"
            android:textSize="10dip"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:text="校园生活"/>
  	</LinearLayout>
        <LinearLayout 
        android:id="@+id/bottom_show_layout_ly"
        android:layout_width="64dip"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@drawable/cd_back">
        <ImageView 
            android:id="@+id/home_bottom_show_bn"
            android:layout_width="28dip"
            android:layout_height="30dip"
            android:layout_gravity="center"
            android:layout_marginTop="4dip"
            android:background="@drawable/rss_news"/>
        <TextView 
            android:id="@+id/home_bottom_show_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="2dip"
            android:textSize="10dip"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="社会新闻"/>
	  </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_cam_layout_ly"
            android:layout_width="64dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/cd_back"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/home_bottom_show_bn"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dip"
                android:background="@drawable/more" />

            <TextView
                android:id="@+id/home_bottom_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="15dip"
                android:text="更多"
                android:textColor="@android:color/white"
                android:textSize="10dip"
                android:textStyle="bold" />

        </LinearLayout>

</LinearLayout>