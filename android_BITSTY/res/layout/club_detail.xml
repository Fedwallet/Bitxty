<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

           <TextView
               android:id="@+id/publishname"
               android:layout_width="70dp"
               android:layout_height="wrap_content"
               android:layout_marginLeft="18dp"
               android:layout_below="@+id/type"
               android:ems="10"
               android:hint="发布人:" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/typename"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/title"
                    android:layout_marginTop="40dp"
                    android:ems="10"
                    android:gravity="left"
                    android:inputType="textMultiLine"
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:paddingRight="10dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="150dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/publishname"
                    android:layout_alignBottom="@id/publishname"
                    android:layout_toRightOf="@+id/publishname"
                    android:ems="10" />

                <TextView
                    android:id="@+id/type"
                    android:layout_width="100dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/typename"
                    android:layout_alignBottom="@+id/typename"
                    android:layout_toRightOf="@+id/typename"
                    android:ems="10" />
                <TextView
                    android:id="@+id/typename"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/publishname"
                    android:layout_below="@+id/content"
                    android:layout_marginTop="14dp"
                    android:ems="10"
                    android:hint="活动类别:"
                    android:paddingLeft="0dp" />

                <TextView
                    android:id="@+id/timename"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_toLeftOf="@+id/type"
                    android:ems="10"
                    android:hint="发布时间:" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:ems="10"
                    android:layout_toRightOf="@id/timename" />
	    
    </RelativeLayout>
    
</LinearLayout>